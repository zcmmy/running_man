<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限 - 必须保留 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- WiFi状态权限 - 保留，有助于判断网络情况 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- [!!] 已删除的权限 [!!]
     - ACCESS_COARSE_LOCATION (不再需要)
     - ACCESS_FINE_LOCATION (不再需要)
     - READ_EXTERNAL_STORAGE (已过时，目标 SDK 36)
     - WRITE_EXTERNAL_STORAGE (已过时，目标 SDK 36)
     - CHANGE_WIFI_STATE (不再需要)
     - CHANGE_NETWORK_STATE (不再需要)
    -->

    <application
        android:name=".CampusRunnerApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RunningMan"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.RunningMan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- [!!] 必须添加：注册 WebMapActivity [!!] -->
        <activity
            android:name=".ui.screens.WebMapActivity"
            android:exported="false"
            android:label="地图详情"
            android:theme="@style/Theme.RunningMan" />

    </application>

    <!-- [!!] 必须添加：应用包可见性查询 [!!]
         修复 "未找到应用" 错误。
         这必须放在 <application> 标签之外。
    -->
    <queries>
        <!-- 允许查询浏览器 (https) -->
        <intent>
            <action android:name="android.content.Intent.ACTION_VIEW" />
            <data android:scheme="https" />
        </intent>

        <!-- 允许查询地图协议 (Scheme) -->
        <intent>
            <action android:name="android.content.Intent.ACTION_VIEW" />
            <data android:scheme="amap" /> <!-- 高德地图 -->
        </intent>
        <intent>
            <action android:name="android.content.Intent.ACTION_VIEW" />
            <data android:scheme="baidumap" /> <!-- 百度地图 -->
        </intent>
        <intent>
            <action android:name="android.content.Intent.ACTION_VIEW" />
            <data android:scheme="qqmap" /> <!-- 腾讯地图 -->
        </intent>

        <!-- 允许查询地包名 (Package Name)，这是更稳健的方式 -->
        <package android:name="com.autonavi.minimap" /> <!-- 高德地图 -->
        <package android:name="com.baidu.BaiduMap" /> <!-- 百度地图 -->
        <package android:name="com.tencent.map" /> <!-- 腾讯地图 -->


        <intent>
            <action android:name="android.content.Intent.ACTION_VIEW" />
            <data android:scheme="httpsS" />
        </intent>

        <intent>
            <action android:name="android.content.Intent.ACTION_VIEW" />
            <data android:scheme="geo" />
        </intent>

        <intent>
            <action android:name="android.content.Intent.ACTION_VIEW" />
            <data android:scheme="amap" /> </intent>
        <intent>
            <action android:name="android.content.Intent.ACTION_VIEW" />
            <data android:scheme="baidumap" /> </intent>
        <intent>
            <action android:name="android.content.Intent.ACTION_VIEW" />
            <data android:scheme="qqmap" /> </intent>

        <package android:name="com.autonavi.minimap" /> <package android:name="com.baidu.BaiduMap" /> <package android:name="com.tencent.map" />

    </queries>

</manifest>
